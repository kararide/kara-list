<div class="row">
  <div class="large-10 columns">
  <%= form_for(@anime) do |f| %>
    <form>
      <fieldset>
        <legend>Add Anime</legend>
        <div class="row">
          <div class="large-12 columns">
          	<%= f.label :title %>
          	<%= f.text_field :title %>
          </div>
        </div>
        <div class="row">
          <div class="large-6 columns">
          	<%= f.label :summary %>
          	<%= f.text_area :summary %>
          </div>
          <div class="large-6 columns">
          	<%= f.label :episodes %>
          	<%= f.text_field :episodes %>
          </div>
        </div>
        <div class="row">
          <div class="large-4 columns">
          	<%= f.label :status %>
          	<%= radio_button_tag(:status, "on") %>
						<%= label_tag(:status, "Ongoing") %>
						<%= radio_button_tag(:status, "fin") %>
						<%= label_tag(:status, "Finished") %>
          </div>
          <div class="large-6 columns">
          	<%= f.label :genre_id %>
          	<%= f.select :genre_id, Genre.all.collect {|x| [x.name, x.id]}, {}, :multiple => true %>
          </div>
          <%= f.submit "ADD", class: "button tiny expand" %>
        </div>
      </fieldset>
    </form>
    <% end %>
  </div>
</div>